              <input type="Number" value="<%= data.quantity %>" name="quantity" class="form-control" id="quantity" placeholder="Animal Quantity" required onchange="calculatePrice()">
            </div>
          </div>
          <label for="">Total Amount:</label>
          <input type="number" name="totalPrice" value="<%= data.totalPrice %>" readonly class="form-control" id="totalPrice">
          <button type="submit" class="btn btn-success mt-3">Submit</button>

        </form>


      </div>

   
