<%- include('./partial/header.ejs') %>
<div class="container">


    


    <div class="row" id="mutton1">
        <div class="col-sm-6 mt-5">
            <h2 class="alert alert-success text-center">Add New Mutton</h2>
  
  <form action="/mutton" method="post" enctype="multipart/form-data">
    <div class="form-group">
      <label for="title">Title:</label>
      <input type="text" class="form-control" id="title" placeholder="Enter your title" name="title">
    </div>
    <div class="form-group">
      <label for="price">Price:</label>
      <input type="number" class="form-control" id="price" placeholder="Enter your price" name="price">
    </div>
    
    <div class="form-group">
        <label for="fee">Img:</label>
        <input type="file" class="form-control" id="img" placeholder="Enter the img" name="img">
      </div>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
  
  
        </div>
        <div class="col-sm-6 mt-5">
            <h2 class="alert alert-success text-center">
                List of mutton
            </h2>
            <table class="table table-bordered">
    <thead>
      <tr>
        <th>No</th>
        <th>Title</th>
        <th>Price</th>
       
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
        <% var i =1 %>
        <% data.forEach((item)=>{  %>
            <td><%= i++ %></td>
            <td><%= item.title %></td>
            <td><%= item.price %></td>
            
            <td>
                <form action="/mutton/edit/<%= item._id %>" method="get" class="d-inline">
            <button type="submit" class="btn">
                <i class="fa fa-pencil"></i>
            </button>
        </form>


        <form action="/mutton/delet/<%= item._id %>" method="post" class="d-inline">
            <button type="submit" class="btn">
                <i class="fa fa-trash danger"></i>
            </button>
        </form>
             
            </td>

<td>
    <img src="<%= item.img %>" width="200" height="200">
</td>


          </tr>
      <%  }) %>
      <tr>
        
      <!-- Add more rows as needed -->
    </tbody>
  </table>





        </div>
        
    </div>

</div>  



<%- include('./partial/footer.ejs') %>